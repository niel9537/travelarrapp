<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgreyanedot"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:background="@color/redanedot"
        android:padding="10dp"
        android:backgroundTint="@color/blueanedot"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:backgroundTint="@color/blueanedot"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp"
                        android:gravity="left|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/blueanedot"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:text="Agi Kasius"/>
                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/txtUrgent"
                        android:background="@color/redanedot"
                        android:layout_weight="3"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:text="Penting"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDates"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="left|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/blueanedot"
                    android:textSize="10sp"
                    android:text="2020-12-11"/>
                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:textSize="10sp"
                    android:text="Status : Menunggu konfirmasi dari Admin"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <ImageView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/dotted_line"
        android:layerType="software" />

</LinearLayout>