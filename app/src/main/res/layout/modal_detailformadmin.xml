<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgreyanedot"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="10sp"
                android:textColor="@color/blueanedot"
                android:id="@+id/txtFrom"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_location"
                android:drawableTint="@color/blueanedot"
                android:text="From"
                android:textAlignment="center"/>
            <ImageView
                android:src="@drawable/dotted_line"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <TextView
                android:textSize="10sp"
                android:textColor="@color/blueanedot"
                android:id="@+id/txtTo"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_location"
                android:drawableTint="@color/blueanedot"
                android:text="To"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/blueanedot"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Detail Perjalanan"
                    android:gravity="center"/>

            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/white"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text="Nama"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/txtName"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text=": Jurgen Klopp"
                            android:gravity="left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text="NIK"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/txtNik"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text=": 1201021020"
                            android:gravity="left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text="Nomor HP"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/txtPhonenumber"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text=": 0824834783748"
                            android:gravity="left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text="Email"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/txtEmail"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text=": jurgen111@gmail.com"
                            android:gravity="left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text="Alasan Perjalanan"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/txtTravelreason"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text=": Bosan hidup"
                            android:gravity="left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text="Tanggal Berangkat"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/txtDates"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text=": 2022-12-12"
                            android:gravity="left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text="Lama Perjalanan"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/txtDuration"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text=": 12 Hari"
                            android:gravity="left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text="Tingkat Urgensi"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/txtUrgent"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text=": Sangat Penting"
                            android:gravity="left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text="Budget"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/txtBudget"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text=": Belum Ditentukan"
                            android:gravity="left"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text="Status"
                            android:gravity="left"/>
                        <TextView
                            android:id="@+id/txtStatus"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blueanedot"
                            android:text=": Menunggu Konfirmasi"
                            android:gravity="left"/>
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>
            <Button
                android:textColor="@color/blueanedot"
                android:backgroundTint="@color/white"
                android:id="@+id/btnTransport"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LIHAT DETAIL TRANSPORTASI"
                android:textSize="15sp"/>
            <Button
                android:textColor="@color/blueanedot"
                android:backgroundTint="@color/white"
                android:id="@+id/btnHotel"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LIHAT DETAIL HOTEL"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
               <com.google.android.material.textfield.TextInputLayout
                   android:gravity="center"
                   android:background="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:hintTextColor="@color/blueanedot"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                   android:hint="Budget Perjalanan">
                   <com.google.android.material.textfield.TextInputEditText
                       android:textColor="@color/blueanedot"
                       android:id="@+id/edtBudget"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:inputType="number"
                       android:text=""/>
               </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <Button
                    android:backgroundTint="@color/redanedot"
                    android:layout_weight="1"
                    android:id="@+id/btnTolak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOLAK"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"/>
                <Button
                    android:backgroundTint="@android:color/holo_green_light"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/btnTerima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TERIMA"
                    android:textSize="15sp"/>
            </LinearLayout>
            <Button
                android:layout_marginHorizontal="20dp"
                android:id="@+id/btnKembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KEMBALI"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>